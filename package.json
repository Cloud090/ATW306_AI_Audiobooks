{
  "name": "narrify-audiobook",
  "version": "1.0.0",
  "description": "AI-powered audiobook generator with emotional narration",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "audiobook",
    "text-to-speech",
    "ai",
    "epub",
    "reader"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "epubjs": "^0.3.93",
    "jszip": "^3.10.1",
    "mammoth": "^1.11.0",
    "node-epub": "^1.0.0-beta.5",
    "node-fetch": "^2.7.0",
    "pdf-parse": "^2.2.2",
    "sqlite3": "^5.1.7",
    "xml2js": "^0.6.2"
  },
  "build": {
    "appId": "com.narrify.audiobook",
    "productName": "Narrify",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "renderer.js",
      "styles.css",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "category": "Office"
    }
  }
}
